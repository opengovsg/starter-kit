{
  "extends": "@acme/tsconfig/base.json",
  "compilerOptions": {
    "types": ["vitest/globals"],
    "lib": ["ES2022", "dom", "dom.iterable"],
    "jsx": "preserve",
    "paths": {
      "~/*": ["./src/*"],
      "~storybook/*": ["./.storybook/*"],
      "~tests/*": ["./tests/*"]
    },
    "plugins": [{ "name": "next" }]
  },
  "include": [".", ".next/types/**/*.ts", ".storybook/**/*"],
  "exclude": ["node_modules", "public/mockServiceWorker.js", ".next"]
}
